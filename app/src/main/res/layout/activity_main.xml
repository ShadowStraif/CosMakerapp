<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363942">
    <TextView
        android:id="@+id/costumesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Персонажи"
        android:textColor="@color/sideTextColor"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:textSize="21sp"
        />
    <View
        android:layout_width="match_parent"

        android:layout_height="2dp"
        android:background="@color/sideTextColor"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="42dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/costumesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/costumesText"
        android:textColor="@color/sideTextColor"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:nestedScrollingEnabled="true"
        />
 <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:backgroundTint="@color/buttonColor"
        android:src="@drawable/ic_baseline_add"
        />


</RelativeLayout>